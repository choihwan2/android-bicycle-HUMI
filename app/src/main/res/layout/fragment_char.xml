<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/LevelClassText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="왕"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:layout_margin="@dimen/fab_margin"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/LevelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lv1"
            android:textAlignment="textStart"
            android:layout_weight="1"
            android:layout_margin="@dimen/fab_margin"
            android:textStyle="bold"
            android:textSize="20sp"
            />

    </LinearLayout>


    <ProgressBar
        android:id="@+id/charProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:progress="0"/>

    <ImageView
        android:id="@+id/CharImgView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/fab_margin"
        android:background="@mipmap/charback"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:text="라이딩 중에 디바이스의 활용도가 높을수록\n적절한 사용을 할수록\n경험치를 더 많이 얻을 수 있어요!\n\n 안전한 라이딩으로 여러분의 캐릭터를 성장시켜 보세요!"/>

    <!--
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="안전라이더 명예의 전당"/>
       -->

</LinearLayout>
